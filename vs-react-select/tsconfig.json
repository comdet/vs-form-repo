{
  "typeRoots": [
    "node_modules/@types"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es6", "es2017", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test/*"
  ]
}
