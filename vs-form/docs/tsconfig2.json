{
  "compilerOptions": {
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "rootDir": "./custom/ts",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "outDir": "./custom/js",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "custom/ts/*"
  ]
}